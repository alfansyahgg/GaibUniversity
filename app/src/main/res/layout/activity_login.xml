<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/blueBckgrnd"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".40"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:textAlignment="center"
            android:fontFamily="@font/twebbold"
            android:textSize="26sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/login"
            android:paddingTop="30dp"
            android:fitsSystemWindows="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".60"
        android:orientation="vertical"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="27dp"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/twebregular"
                        android:background="@color/white"
                        android:textSize="20dp"
                        android:textColor="#3D4C63"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:layout_marginTop="15dp"
                    app:passwordToggleEnabled="true"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/twebregular"
                        android:background="@color/white"
                        android:textSize="20dp"
                        android:textColor="#3D4C63"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forgot Your Password?"
                    android:textColor="@color/bluePrime"
                    android:fontFamily="@font/twebsemibold"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="10dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="Login"
                    android:fontFamily="@font/twebsemibold"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    app:cornerRadius="30dp"
                    app:backgroundTint="@color/bluePrime"
                    android:layout_marginTop="100dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/daftar"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>



        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>


</LinearLayout>